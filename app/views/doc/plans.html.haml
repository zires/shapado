- if @group.owner == current_user
  - upgrade = t('global.upgrade')
  - downgrade = t('global.downgrade_to_free')
- else
  - upgrade = t('global.sign_up')
  - downgrade = upgrade

#main-content-wrap
  .top
    %h1=t('.title')

  .plans-table
    .each.first
      .header
        %h2= t('.optimum')
        %p= t('.huge_sites')
      .features
        %ul
          %li= t('.unlimited')
          %li.tipsy-plans{title: t('.custom_domain_tip')}= t('.custom_domain')
